extends layout

block content
    div(class="container mt-3 mx-auto")
        
        div(id="usuario")

        div
            div(class="alert alert-success d-flex justify-content-between")
                span(class='display-4 font-weight-normal') Bienvenido #{user} 
                button(class="btn btn-warning" onclick ="location.href='/logout'") Desloguear

        div(id="contenidoDeLogeo")

        div(class="jumbotron w-100")
            h1(style="color:blue;")
            h1(style="color:blue;") Ingrese los datos del producto
            form(onsubmit="return false;addProduct();")
                div(class="form-group")
                    label(for="title")
                    b Title
                    input(class="form-control" type="text" name="title" id="title" required)
                div(class="form-group")
                    label(for="price")
                    b Price
                    input(class="form-control" type="text" name="price" id="price" required)
                div(class="form-group")
                    label(for="thumbnail")
                    b Thumbnail
                    input(class="form-control" type="text" name="thumbnail" id="thumbnail" required)
            button(class="btn btn-success mt-3 mb-5" onclick ="return addProduct()") Enviar

            div(id="productos")
        div(class="jumbotron w-100")
            div
                h1(style="color:blue;") Centro de Mensajes
                h2(style="color:blue;" id="compresion")
                label(for="title")
                b Ingrese su E-Mail para el chat
                input(class="form-control" type="mail" name="mail" id="mail")
                label(for="title")
                b Ingrese su nombre para el chat
                input(class="form-control" type="text" name="nombre" id="nombre")
                label(for="title")
                b Ingrese su apellido para el chat
                input(class="form-control" type="text" name="apellido" id="apellido")
                label(for="title")
                b Ingrese su edad para el chat
                input(class="form-control" type="text" name="edad" id="edad")
                label(for="title")
                b Ingrese su alias para el chat
                input(class="form-control" type="text" name="alias" id="alias")
                label(for="title")
                b Ingrese el link a su avatar para el chat
                input(class="form-control" type="text" name="avatar" id="avatar")
                p(class="border-bottom border-4 w-auto mt-5") 
                div(class="mt-3" id="chat")
                p(class="border-bottom border-4 w-auto mt-5") 
                div(class="form-inline")
                    input(class="form-control mt-5 mb-5 mr-5" type="text" name="message" id="message")
                    button(class="btn btn-primary mt-5 mb-5" onclick ="return newMessage()") Enviar!